name: Deploy to Hugging Face Space
on:
  push: { branches: [ main ] }
  workflow_dispatch:
jobs:
  sync-to-space:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
          lfs: true
      - name: Push to Hugging Face Space
        env:
          HF_TOKEN: ${{ secrets.HF_TOKEN }}
        run: |
          git remote add space https://huggingface.co/spaces/nehabathuri/Image-to-Story || true
          git push --force https://nehabathuri:$HF_TOKEN@huggingface.co/spaces/nehabathuri/Image-to-Story HEAD:main
